    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch karma",
            "program": "${workspaceRoot}\\node_modules\\karma\\bin\\karma",
            "args": [
                "start",
                "karma-config-debug.js"
            ],
            "cwd": "${workspaceRoot}"
        },
          {
            "type": "node",
            "request": "launch",
            "name": "Stryker",
            "program": "${workspaceRoot}\\node_modules\\stryker\\bin\\stryker",
            "args": [
                "-c",
                "stryker.conf.js",
                "--logLevel",
                "trace"
            ],
            "cwd": "${workspaceRoot}"
        }
    ]
}
